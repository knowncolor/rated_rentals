<% content_for :head do %>
    <%= render 'home_js' %>
<% end %>

<div class="jumbotron">
  <h1>Rental Property Reviews</h1>

      <div class="row">
        <div class="col-xs-12">
          <label class="sr-only" for="address-search">Search by street name</label>
          <%= text_field_tag :search, params[:search], {:id => 'address-search', :class => 'form-control input-xl', :placeholder => 'Search by street name'} %>
        </div>
      </div>
      <div id="map-canvas"></div>

</div>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>Tenants</h2>

      <p>Share your experiences and write a review for somewhere you've lived.</p>

      <%= link_to 'Add A Review &raquo;'.html_safe, new_review_path, :class => 'btn btn-primary' %>

      <p></p>
    </div>
  </div>

</div>