<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>Sign in</h2>

      <%= bootstrap_form_for(resource, :as => resource_name, :url => session_path(resource_name), help: :block) do |f| %>
          <%= f.alert_message "Please fix the errors below." %>
          <%= devise_error_messages! %>

          <%= f.text_field :email, :autofocus => true %>
          <%= f.password_field :password %>

          <%= f.check_box :remember_me %>

          <%= button_tag "Sign in", :name => nil, :class => 'btn btn-primary btn-lrg' %>
      <% end %>

      <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
      <% end -%>
      <%= link_to "Create an account", new_registration_path(resource_name) %>
    </div>

    <div class="col-md-6">
      <h2>Sign in via...</h2>
      <%= link_to image_tag("facebook_sign_in.png"), user_omniauth_authorize_path(:facebook) %>
    </div>
  </div>

</div>
