<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <h2>Sign in</h2>

      <%= form_for resource, :as => resource_name, :url => session_path(resource_name) do |f| %>
          <%= devise_error_messages! %>

          <div class='form-group'>
            <%= f.label :email, class: "sr-only" %>
            <%= f.text_field :email, :autofocus => true, class: 'form-control', placeholder: "email address" %>
          </div>

          <div class='form-group'>
            <%= f.label :password, class: "sr-only" %>
            <%= f.password_field :password, class: 'form-control', placeholder: "password" %>
          </div>

          <%= button_tag "Sign in", :name => nil, :class => 'btn btn-primary btn-lg' %>

      <% end %>

      <%= link_to "Forgot your password?", new_password_path(resource_name) %>

    </div>

    <div class="col-sm-6">
      <h2>Not a member?</h2>
      <p><strong><%= link_to "Create an account", new_registration_path(resource_name) %></strong> or sign in using one of the providers below. We will never use your data for anything else.</p>
      <%= link_to image_tag("facebook_sign_in.png"), user_omniauth_authorize_path(:facebook) %>
      <%= link_to "Sign in with Google", user_omniauth_authorize_path(:google_oauth2) %>
    </div>
  </div>

</div>
