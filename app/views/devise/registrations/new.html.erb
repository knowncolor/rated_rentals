<div class="container">

  <h2>Create an account</h2>

  <%= bootstrap_form_for(resource, :as => resource_name, :url => registration_path(resource_name), help: :block) do |f| %>
      <%= f.alert_message "Please fix the errors below." %>

      <%= f.text_field :email, :autofocus => true %>
      <%= f.password_field :password %>
      <%= f.password_field :password_confirmation %>
      </br>
      <%= button_tag "Create account", :name => nil, :class => 'btn btn-primary btn-lrg' %>
  <% end %>

</div>

