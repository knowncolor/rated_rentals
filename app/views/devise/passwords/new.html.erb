<div class="container">

      <h2>Forgot your password?</h2>

      <%= bootstrap_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }, help: :block) do |f| %>
          <%= f.alert_message "Please fix the errors below." %>

          <%= f.text_field :email, :autofocus => true %>

          <br />
          <%= f.actions do %>
              <%= f.primary 'Send me password reset instructions' %>
          <% end %>
      <% end %>

</div>
