<% if record.errors.any? %>
    <div class="alert alert-danger">
      <strong>Please fix the <%= pluralize(record.errors.count, "error") %> below:</strong>
      <ul>
        <% record.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>